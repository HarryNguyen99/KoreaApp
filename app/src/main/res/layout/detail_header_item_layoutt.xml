<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF8F07"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_tieu_de"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="베트남 한인업소록 원더하노이"
            android:textColor="#000"
            android:textSize="23sp"
            android:layout_weight="1"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/img_logo_ks"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
       android:layout_marginTop="20dp"
        android:src="@mipmap/img_logo_khach_san"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cục Xì Lầu"
        android:textColor="#000"
        android:fontFamily="@font/roboto_bold"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20sp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_telephone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_telephone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="0961080123"
            android:textSize="15sp"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20sp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_locate"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_dia_chi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Thanh Xuân - Hà Nội"
            android:textSize="15sp"
            android:textColor="#000"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_web"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_web"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="www.google.com"
            android:textSize="15sp"
            android:textColor="#000" />

    </LinearLayout>



</LinearLayout>
